<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Waterfall View -->
    <com.js8call.example.ui.WaterfallView
        android:id="@+id/waterfall_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/waterfall_background"
        app:layout_constraintBottom_toTopOf="@id/status_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

    <!-- Status Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/status_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/control_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Status Text -->
            <TextView
                android:id="@+id/status_text"
                style="@style/StatusIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monitor_status_stopped"
                android:textSize="14sp"
                tools:text="STOPPED" />

            <!-- Status Details Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:columnCount="2"
                android:rowCount="3">

                <!-- SNR -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="@string/monitor_snr"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/snr_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="--"
                    android:textSize="12sp"
                    tools:text="+5 dB" />

                <!-- Power -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="4dp"
                    android:text="@string/monitor_power"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/power_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="4dp"
                    android:text="--"
                    android:textSize="12sp"
                    tools:text="-45 dB" />

                <!-- Audio Device -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="4dp"
                    android:text="@string/monitor_audio_device"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/audio_device_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="4dp"
                    android:minHeight="32dp"
                    android:spinnerMode="dropdown" />

            </GridLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Control Buttons -->
    <LinearLayout
        android:id="@+id/control_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/start_stop_button"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="56dp"
            android:text="@string/monitor_start"
            android:textSize="16sp"
            app:icon="@android:drawable/ic_media_play"
            app:iconGravity="textStart" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
